<?xml version="1.0" encoding="UTF-8"?>
<xsd:schema xmlns="http://jkys.com/mars/phobos"
        xmlns:xsd="http://www.w3.org/2001/XMLSchema"
        xmlns:beans="http://www.springframework.org/schema/beans"
        targetNamespace="http://jkys.com/mars/phobos">

    <xsd:import namespace="http://www.springframework.org/schema/beans" />

    <xsd:element name="registry" type="registryType" />
    <xsd:complexType name="registryType">
        <xsd:attribute name="xbusAddr" type="xsd:string" />
        <xsd:attribute name="servicePort" type="xsd:int" use="required"/>
        <xsd:attribute name="blocking" type="xsd:boolean" default="false"/>
        <xsd:attribute name="serverName" type="xsd:string"/>
    </xsd:complexType>

    <xsd:element name="service" type="serviceType" />
    <xsd:complexType name="serviceType">
        <xsd:complexContent>
            <xsd:extension base="beans:identifiedType">
                <xsd:attribute name="class" type="xsd:string" use="required"/>
            </xsd:extension>
        </xsd:complexContent>
    </xsd:complexType>

    <xsd:element name="client" type="clientType"/>
    <xsd:complexType name="clientType">
        <xsd:attribute name="xbusAddr" type="xsd:string"/>
        <xsd:attribute name="addr" type="xsd:string"/>
        <xsd:attribute name="clientAppName" type="xsd:string" use="required"/>
        <xsd:attribute name="serialization" default="MAGPACK">
            <xsd:simpleType>
                <xsd:restriction base="xsd:string">
                    <xsd:enumeration value="JSON"/>
                    <xsd:enumeration value="MAGPACK"/>
                    <xsd:enumeration value="PROTOBUFF"/>
                </xsd:restriction>
            </xsd:simpleType>
        </xsd:attribute>
        <xsd:attribute name="startTimeOut" type="xsd:int" default="60"/>
        <xsd:attribute name="requestTimeOut" type="xsd:int" default="60" />
    </xsd:complexType>
</xsd:schema>